    let INVENTARIO = [];
    let CART = [];
    let MARGEN = 30;
    let scanner = null;

    // --- ARRANQUE SEGURO ---
    window.onload = function() {
        try {
            let stored = localStorage.getItem('millan_v20_db');
            if(stored) {
                INVENTARIO = JSON.parse(stored);
            } else {
                INVENTARIO = JSON.parse(JSON.stringify(DB_RAW));
                INVENTARIO.forEach(p => p.price = Math.ceil(p.cost * 1.30));
                save();
            }
            document.getElementById('status').style.background = "#00c851";
        } catch (e) {
            alert("Error al iniciar.");
            factoryReset();
        }
    };

    function save() { localStorage.setItem('millan_v20_db', JSON.stringify(INVENTARIO)); }

    // --- INTERFAZ ---
    function transferSearch(input) {
        let val = input.value;
        if(val.length > 0) {
            document.getElementById('hero-screen').style.display = 'none';
            document.getElementById('results-screen').style.display = 'block';
            let topInput = document.getElementById('top-search');
            topInput.value = val;
            topInput.focus();
            filterList();
        }
    }

    function resetHome() {
        document.getElementById('results-screen').style.display = 'none';
        document.getElementById('hero-screen').style.display = 'flex';
        document.getElementById('center-search').value = "";
        document.getElementById('top-search').value = "";
    }

    function filterList() {
        let q = document.getElementById('top-search').value.toUpperCase();
        let div = document.getElementById('list-area');
        div.innerHTML = "";

        let list = INVENTARIO.filter(p => p.n.toUpperCase().includes(q) || p.c.toUpperCase().includes(q));

        if(list.length === 0) {
            div.innerHTML = `<div style='text-align:center; padding:30px;'><p>No lo topo.</p><button onclick="openGoogle()" style="padding:10px; border:1px solid #4285F4; background:white; color:#4285F4; border-radius:20px;">Buscar en Google</button></div>`;
            return;
        }

        list.forEach(p => {
            div.innerHTML += `
            <div class="card">
                <div class="card-info"><div class="card-title">${p.n}</div><div class="card-code">${p.c}</div></div>
                <div><div class="card-price">$${p.price}</div><button class="btn-add" onclick="addCart('${p.c}')">AGREGAR</button></div>
            </div>`;
        });
    }

    function openGoogleDirect() { let t = document.getElementById('center-search').value || "Refaccion"; window.open("https://www.google.com/search?tbm=isch&q="+t, "_blank"); }
    function openGoogle() { let t = document.getElementById('top-search').value; window.open("https://www.google.com/search?tbm=isch&q="+t, "_blank"); }

    // --- CAJA ---
    function addCart(c) {
        let p = INVENTARIO.find(x => x.c === c);
        if(p) { CART.push(p); alert("Agregado: " + p.n); }
    }
    function renderCart() {
        let div = document.getElementById('cart-display');
        let tot = 0; div.innerHTML = "";
        if(CART.length === 0) div.innerHTML = "<div style='text-align:center; color:#999;'>Carrito Vac칤o</div>";
        else {
            CART.forEach((p, i) => {
                tot += p.price;
                div.innerHTML += `<div style="display:flex; justify-content:space-between; border-bottom:1px solid #eee; padding:5px;"><span>${p.n}</span><span>$${p.price} <b style="color:red; margin-left:10px;" onclick="delCart(${i})">X</b></span></div>`;
            });
        }
        document.getElementById('total-val').innerText = tot;
    }
    function delCart(i) { CART.splice(i,1); renderCart(); }
    function printTicket() { if(CART.length > 0) { window.print(); if(confirm("쯃isto?")) { CART=[]; renderCart(); } } else alert("Nada"); }

    // --- ADMIN (TABLA CORREGIDA) ---
    function openAdmin() { document.getElementById('login-overlay').style.display = 'flex'; document.getElementById('pin').value = ""; }
    function checkPin() { if(document.getElementById('pin').value === "1234") { closeLogin(); nav('admin'); renderAdminTable(); } else alert("Error"); }
    function closeLogin() { document.getElementById('login-overlay').style.display = 'none'; }

    function renderAdminTable() {
        let b = document.getElementById('admin-tbody');
        let f = document.getElementById('admin-search').value.toUpperCase();
        b.innerHTML = "";
        INVENTARIO.forEach(p => {
            if(p.n.toUpperCase().includes(f) || p.c.includes(f)) {
                // AQU칈 EST츼N LAS COLUMNAS DESGLOSADAS
                b.innerHTML += `<tr>
                    <td><small>${p.c}</small></td>
                    <td>${p.n}</td>
                    <td class="cost-col">$${p.cost}</td>
                    <td class="price-col">$${p.price}</td>
                    <td><button onclick="delProd('${p.c}')" style="color:red; background:none; border:none; font-weight:bold;">X</button></td>
                </tr>`;
            }
        });
    }
    function renderAdmin() { renderAdminTable(); } 

